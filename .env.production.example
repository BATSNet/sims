# SIMS Production Environment Configuration
# Copy this to .env.production and fill in your actual values

# Database Configuration
POSTGRES_USER=sims_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
POSTGRES_DB=sims
LOAD_DEMO=false

# API Keys
FEATHERLESS_API_KEY=your_featherless_api_key_here
DEEPINFRA_API_KEY=your_deepinfra_api_key_here

# Environment
ENVIRONMENT=production

# Caddy Configuration
# Use your domain name or the server IP (91.99.179.35)
# Examples:
#   CADDY_DOMAIN=api.yourdomain.com
#   CADDY_DOMAIN=91.99.179.35
CADDY_DOMAIN=91.99.179.35
CADDY_EMAIL=admin@example.com
